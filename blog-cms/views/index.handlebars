<h1>Welcome to My Blog!</h1>

{{#if blogPosts.length}}
  {{#each blogPosts}}
    <div class="blog-post">
      <h2>{{title}}</h2>
      <p>{{content}}</p>
      <p>Created on {{formatDate createdAt}}</p>
    </div>
  {{/each}}
{{else}}
  <p>No posts available. Be the first to create one!</p>
{{/if}}

{{> layouts/footer}}