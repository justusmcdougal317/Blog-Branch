<h2>{{post.title}}</h2>
<p>{{post.content}}</p>
<p>Created by {{post.author.username}} on {{formatDate post.createdAt}}</p>

<!-- Comments section (if comments exist) -->
{{#if post.comments.length}}
  <h3>Comments</h3>
  {{#each post.comments}}
    <div class="comment">
      <p>{{this.text}}</p>
      <p>Comment by {{this.author.username}} on {{formatDate this.createdAt}}</p>
    </div>
 